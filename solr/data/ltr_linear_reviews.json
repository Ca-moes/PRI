{
  "name" : "ltr_linear_reviews",
  "class" : "org.apache.solr.ltr.model.LinearModel",
  "features" : [
    { "name" : "originalScore" },
    { "name" : "reviewRating" },
    { "name" : "reviewVotes" },
    { "name" : "reviewRecency" }
  ],
  "params" : {
    "weights" : {
      "originalScore" : 0.35,
      "reviewRating": 0.15,
      "reviewVotes": 0.2,
      "reviewRecency": 0.3
    }
  }
}