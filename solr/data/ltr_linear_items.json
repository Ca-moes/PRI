{
  "name" : "ltr_linear_items",
  "class" : "org.apache.solr.ltr.model.LinearModel",
  "features" : [
    { "name" : "originalScore" },
    { "name" : "itemRating" },
    { "name" : "itemTotalRatings" },
    { "name" : "itemDiscount" }
  ],
  "params" : {
    "weights" : {
      "originalScore" : 0.4,
      "itemRating": 0.1,
      "itemTotalRatings": 0.25,
      "itemDiscount": 0.25
    }
  }
}